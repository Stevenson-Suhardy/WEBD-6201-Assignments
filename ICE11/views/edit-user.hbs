<form action="/edit-user/{{id}}" method="post">
    <div class="form-group">
        <label for="fullName">Full Name</label>
        <input type="text" name="fullName" id="fullName" class="form-control" value="{{user.fullName}}" required>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="email" id="email" class="form-control" value="{{user.email}}" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<form action="/delete-user/{{id}}" method="post">
    <input type="hidden" name="hiddenInput" />
    <button type="submit" class="btn btn-secondary">Delete Record</button>
</form>